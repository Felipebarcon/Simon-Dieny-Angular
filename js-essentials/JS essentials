  sum(1, 2)
  substract(2, 1)
}

//*************************************
//*************************************
// EXERCICES

const users = [
  { name: 'Joe', skills: ['web dev', 'mobile dev'] },
  { name: 'John', skills: null }
];

function usersWithSkill(users, skill) {
  return users.filter(function(user) {
    return !!user.skills && user.skills.includes(skill)
  })
}

usersWithSkill(users, 'web dev');



