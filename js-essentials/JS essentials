// UTILISER == CORRECTEMENT

const john = { skill: null };
const jack = {};

if((john.skill === null || jack.skill === null) && 
   (john.skill === undefined || jack.skill === undefined)) {
  console.log('No skills in the team')
}

if(john.skill == null && jack.skill == null) {
  console.log('No skills in the team')
}


