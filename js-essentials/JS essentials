const ageMajorityFr = 18;
const ageMajorityUs = '21'

if(Number(ageMajorityFr) < Number(ageMajorityUs)) {
  console.log('Ok')
}

if(+ageMajorityFr < +ageMajorityUs) {
  console.log('Ok')
}

if(ageMajorityFr < ageMajorityUs) {
  console.log('Ok')
}

18 < '21'

